<div class="errors-and-echoes-welcome">
  <div class="welcome-header">
    <i class="fas fa-shield-alt"></i>
    <h2>{{title}}</h2>
  </div>

  <div class="welcome-content">
    <div class="data-included">
      <h3>What gets reported:</h3>
      <ul>
        {{#each includedItems}}
        <li>✅ {{this}}</li>
        {{/each}}
      </ul>
    </div>

    <div class="data-excluded">
      <h3>What's NOT reported:</h3>
      <ul>
        {{#each excludedItems}}
        <li>❌ {{this}}</li>
        {{/each}}
      </ul>
    </div>

    <p class="privacy-note">
      {{privacyNote}}
    </p>

    <div class="privacy-levels">
      <h3>Privacy Levels:</h3>
      <div class="privacy-level-option">
        <label>
          <input type="radio" name="privacy-level" value="minimal">
          <strong>Minimal</strong> - Only error message and stack trace
        </label>
      </div>
      <div class="privacy-level-option">
        <label>
          <input type="radio" name="privacy-level" value="standard" checked>
          <strong>Standard</strong> - Error + Foundry version + active modules
        </label>
      </div>
      <div class="privacy-level-option">
        <label>
          <input type="radio" name="privacy-level" value="detailed">
          <strong>Detailed</strong> - Standard + browser info + scene context
        </label>
      </div>
    </div>
  </div>

  <div class="welcome-actions">
    <button type="button" class="btn btn-primary" data-action="enable">
      <i class="fas fa-check"></i> {{buttons.enable}}
    </button>
    <button type="button" class="btn btn-secondary" data-action="decline">
      {{buttons.decline}}
    </button>
    <button type="button" class="btn btn-info" data-action="learn-more">
      <i class="fas fa-info-circle"></i> {{buttons.learnMore}}
    </button>
  </div>
</div>