{
  "name": "fvtt-errors-and-echoes",
  "version": "0.1.0",
  "description": "Anonymous error reporting for Foundry VTT modules",
  "main": "dist/module.js",
  "type": "module",
  "scripts": {
    "build": "rollup -c",
    "build:watch": "rollup -c -w",
    "dev": "rollup -c -w",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "foundry",
    "foundry-vtt",
    "error-reporting",
    "module"
  ],
  "author": "David Raynes <rayners@example.com>",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.5",
    "@types/node": "^20.10.4",
    "rollup": "^4.7.0",
    "rollup-plugin-copy": "^3.5.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0",
    "@vitest/ui": "^1.1.0",
    "jsdom": "^23.0.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "tslib": "^2.8.1"
  }
}
